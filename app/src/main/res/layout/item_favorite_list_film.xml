<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/bg_item_list_film">

    <ImageView
        android:id="@+id/iv_item_favorite_list"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/poster_example"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:contentDescription="@string/poster_film" />

    <TextView
        android:id="@+id/tv_title_item_favorite_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/iv_item_favorite_list"
        android:layout_margin="4dp"
        android:textSize="20sp"
        android:textColor="#000000"
        tools:text="INI JUDUL FILM"
        android:gravity="center_vertical"/>


</RelativeLayout>